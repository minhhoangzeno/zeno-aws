{
  "name": "OrderProduct",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": {
      "required": false,
      "validateUpsert": true
    }
  },
  "properties": {
    "amount": {
      "type": "number"
    },
    "price": {
      "type": "number"
    }
  },
  "validations": [],
  "relations": {
    "order": {
      "type": "belongsTo",
      "model": "Order",
      "foreignKey": ""
    },
    "product": {
      "type": "belongsTo",
      "model": "Product",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "SUPERADMIN",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "ADMIN",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": {
    "getOrder": {
      "accepts": [
        {
          "arg": "ctx",
          "type": "any",
          "required": true,
          "description": "context of request",
          "http": {
            "source": "context"
          }
        },
        {
          "arg": "user",
          "type": "any",
          "required": true,
          "description": "userId",
          "http": {
            "source": "query"
          }
        }
      ],
      "returns": {
        "root": true,
        "type": "object"
      },
      "description": "Get order product in cart by token",
      "http": [
        {
          "path": "/get-order-cart",
          "verb": "get"
        }
      ]
    }
  }
}